import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "Plex", // The text that will be rendered
    link: "10-0-0-10.nip.io:32400", // The link
    icon: "fa-solid fa-tv", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    desc: "Ombi",
    link: "10-0-0-187.nip.io:3579",
    icon: "fa-solid fa-magnifying-glass",
  },
  {
    desc: "Sonarr",
    link: "10-0-0-187.nip.io:8989",
    icon: "fa-solid fa-solar-panel",
  },
  {
    desc: "Radarr",
    link: "10-0-0-187.nip.io:7878",
    icon: "fa-solid fa-satellite-dish",
  },
  {
    desc: "Transmission",
    link: "10-0-0-187.nip.io:9091",
    icon: "fa-solid fa-file-arrow-down",
